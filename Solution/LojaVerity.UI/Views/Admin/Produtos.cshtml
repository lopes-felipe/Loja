<h2>Produtos</h2>

<div class="panel panel-primary">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th></th>
            </tr>
        </thead>
        <tbody data-bind="foreach: modelo.produtos()">
            <tr>
                <td data-bind="text: $data.ID" />
                <td data-bind="text: $data.Nome" />
                <td data-bind="text: $data.Descricao" />
                <td data-bind="text: '$' + $data.Preco.toFixed(2)" />
                <td>
                    <button class="btn btn-xs btn-danger" data-bind="click: excluirProduto">Excluir</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="text-center">
    <button class="btn btn-primary" data-bind="click: function() { modelo.viewAtual('CadastrarProduto') }">
        Cadastrar Produto
    </button>
</div>
